<h2>Vacation Photo Contest</h2>

<form
  class="form-horizontal"
  role="form"
  enctype="multipart/form-data"
  action="/contest/vacation-photo/{{year}}/{{month}}"
  method="post"
>
  <input type="hidden" name="_csrf" value="{{csrf}}" />
  <div class="form-group">
    <label for="fieldName" class="col-sm-2">Name</label>
    <div class="col-sm-4">
      <input type="text" name="name" id="fieldName" class="form-control" />
    </div>
  </div>
  <div class="form-group">
    <label for="fieldEmail" class="col-sm-2">Email</label>
    <div class="col-sm-4">
      <input
        type="email"
        name="email"
        id="fieldEmail"
        class="form-control"
        required
      />
    </div>
  </div>
  <div class="form-group">
    <label for="fieldPhoto" class="col-sm-2">Photo</label>
    <div class="col-sm-4">
      <input
        type="file"
        name="photo"
        id="fieldPhoto"
        class="form-control"
        accept="image/*"
        required
      />
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset col-sm-4">
      <button type="submit" class="btn btn-primary">
        Register
      </button>
    </div>
  </div>
</form>